[sssd]
config_file_version = 2
services = nss, pam, sudo
domains = fnb.co.za

[sudo]

[nss]
filter_users = {{ filter_users }}
filter_groups = {{ filter_groups }}
enum_cache_timeout = 600

[pam]

[domain/fnb.co.za]
debug_level = 3
autofs_provider = ldap
pam_id_timeout  = 600
cache_credentials = True
id_provider = ldap
auth_provider = ldap
ldap_tls_reqcert = never
ldap_uri = {{ ldap_uri }}
ldap_default_bind_dn = {{ ldap_default_bind_dn }}
ldap_default_authtok_type = password
ldap_default_authtok = {{ ldap_default_authtok }}
enumerate = False
ldap_schema = AD
ldap_id_mapping = True
ldap_opt_timeout = 60
ldap_network_timeout = 60
ldap_user_search_base = dc=fnb,dc=co,dc=za
ldap_user_object_class = user
ldap_group_search_base = ou=DomainGroups,dc=fnb,dc=co,dc=za
ldap_group_object_class = group
ldap_referrals = false
ldap_search_timeout = 60
ldap_page_size = 2000
case_sensitive = False
ldap_force_upper_case_realm = False
access_provider = simple
override_homedir = /home/%u
override_shell = /bin/bash
simple_allow_groups = {{ group_list }}
ignore_group_members = True
